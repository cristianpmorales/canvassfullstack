<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Create List</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link rel="stylesheet" href="adminstyle.css">
</head>
<body>
  <section class="container">
      <header>
        <section class="page-header text-center">
          <h1>Create list</h1>
        </section>

          <div class="containerNav">
            <nav class="primary_nav_wrap">
            <ul>
              <li> <a href="/create_campaign">Create Election Campaign</a></li>
              <li> <a href="/completedlist">View completed list</a></li>
              <li><a href="/">Go to Canvasser</a></li>
          </div>
      </header>

      <section class="containerForm">
        <form action="/createpeople" method="post" charset="utf-8">
          <label>First Name </label> <input type="text" name="firstName" />
          <label>Last Name </label> <input type="text" name="lastName" />
          <label>Address </label> <input type="text" name="address" />
          <label>Voted </label> <input type="text" name="votingActivity" value = "N" />
          <button type="submit" name="button">Submit</button>
        </form>
      </section>

      <section class="tableContainer">
            <h3>Canvasser List Below</h3>
            <table>
            <colgroup></colgroup>
            <thead>
              <tr>
                <th scope ="col">Adress</th>
                <th scope ="col">First Name</th>
                <th scope ="col">Last Name</th>
                <th scope ="col">Voting History</th>
                <th scope ="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% peopleList.forEach( function ( peopleList ){ %>
                <tr>
                  <td data-label ="Adress">
                    <a class="" href="/editpeople/<%= peopleList._id %>"><%= peopleList.address %></a>
                  </td>
                  <td data-label ="First Name">
                    <a class="" href="/editpeople/<%= peopleList._id %>"><%= peopleList.firstName %></a>
                  </td>
                  <td data-label ="Last Name">
                    <a class="" href="/editpeople/<%= peopleList._id %>"><%= peopleList.lastName %></a>
                  </td>
                  <td data-label ="Voting History">
                    <a class="" href="/editpeople/<%= peopleList._id %>"><%= peopleList.votingActivity %></a>
                  </td>
                  <td data-label ="Adress">
                    <a class="" href="/destroypeople/<%= peopleList._id %>">Delete</a>
                  </td>
                </td>
                </tr>
                <% }); %>
            </tbody>

          </table>
      </section>
      </section>


    </section>
    <script src="main.js"></script>

  </body>
  </html>
